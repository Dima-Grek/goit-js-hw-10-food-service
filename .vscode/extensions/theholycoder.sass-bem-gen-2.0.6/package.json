{
	"name": "sass-bem-gen",
	"displayName": "Sass BEM Gen",
	"description": "Creates a Bem styled Sass file from HTML class names.",
	"author": {
		"name": "Aaron Dov Turkel"
	},
	"version": "2.0.6",
	"publisher": "TheHolyCoder",
	"engines": {
		"vscode": "^1.44.0"
	},
	"icon": "images/sass-bem-gen-logo-3.png",
	"categories": [
		"Snippets",
		"Other"
	],
	"license": "MIT",
	"keywords": [
		"sass",
		"scss",
		"bem",
		"generator",
		"css",
		"html",
		"angular"
	],
	"activationEvents": [
		"onCommand:sass-bem-gen.generateBem"
	],
	"main": "./out/extension.js",
	"contributes": {
		"menus": {
			"commandPalette": [
				{
					"command": "sass-bem-gen.generateBem",
					"when": "editorLangId == html"
				}
			]
		},
		"commands": [
			{
				"command": "sass-bem-gen.generateBem",
				"title": "Generate CSS"
			}
		],
		"configuration": {
			"title": "Sass BEM Gen",
			"properties": {
				"sass-bem-gen.separatingCharacter": {
					"type": "string",
					"default": "_",
					"description": "Specify the separating character for BEM styled CSS nesting."
				},
				"sass-bem-gen.modifyingCharacter": {
					"type": "string",
					"default": "--",
					"description": "Specify the modifying character for BEM styled CSS nesting."
				},
				"sass-bem-gen.cssFlavor": {
					"type": "string",
					"default": "scss",
					"enum": [
						"scss",
						"sass",
						"less",
						"css"
					],
					"description": "Specify flavor of the CSS file you want overwritten or generated."
				},
				"sass-bem-gen.defaultImports": {
					"type": "array",
					"description": "List default imports to display at the top of the css file."
				}
			}
		},
		"keybindings": [
			{
				"command": "sass-bem-gen.generateBem",
				"key": "alt+g alt+c",
				"when": "editorLangId == html"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"ts-loader": "^7.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/AaronDovTurkel/sass-bem-gen.git"
	},
	"__metadata": {
		"id": "35372336-c30b-4871-9f6e-288019f06dba",
